{
  "name": "lit-lang",
  "displayName": "LIT lang",
  "description": "Support for the LIT programming language",
  "version": "0.1.0",
  "publisher": "matheusrich",
  "repository": {
    "url": "https://github.com/MatheusRich/lit-vscode"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "lit",
        "aliases": [
          "LIT",
          "lit"
        ],
        "firstLine": "^#!\\s*/.*(?:lit)\\b",
        "extensions": [
          ".lit"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lit",
        "scopeName": "source.lit",
        "path": "./syntaxes/lit.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lit",
        "path": "./snippets/lit.json"
      }
    ]
  }
}
