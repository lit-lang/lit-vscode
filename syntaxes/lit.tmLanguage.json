{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LIT",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lit",
          "match": "\\b(if|else|while|loop|return|match|break)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.lit",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.lit",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "number",
      "patterns": [
        {
          "match": "[0-9]+"
        }
      ]
    },
    "identifiers": {
      "name": "identifier",
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_!?]*"
        }
      ]
    }
  },
  "scopeName": "source.lit"
}
